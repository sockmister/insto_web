<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

  	<RelativeLayout
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	     android:layout_gravity="center_vertical"
	     android:layout_weight="1" >

	    
	    <ImageView
         android:id="@+id/row_arrow"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
		 android:layout_alignTop="@+id/message_text"
		 android:layout_alignBottom="@+id/message_text"
		 android:layout_alignLeft="@+id/message_text"
		 android:layout_alignRight="@+id/message_text"
		 android:scaleType="fitXY"
         android:src="@drawable/bg_request_message_main" />
	    
		<LinearLayout
		    android:id="@+id/message_text"
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:orientation="vertical">
"
	    <TextView
	        android:id="@+id/message"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:fontFamily="HelveticaNeue-CondensedBold.ttf"
	        android:gravity="center_vertical"
	        android:text="Medium Textsdf"
	        android:textSize="28sp"
	        android:textStyle="bold"
	        android:textColor="@color/color_wizard_white" />
	    
	    <TextView
	        android:id="@+id/message_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:fontFamily="HelveticaNeue-CondensedBold.ttf"
	        android:gravity="center_vertical|right"
	        android:text="Date"
	        android:textSize="15sp"
	        android:textStyle="bold"
	        android:textColor="@color/color_wizard_white" />
	    
	    </LinearLayout>
	    
    </RelativeLayout>
   <ImageView
         android:id="@+id/row_arrow"
         android:layout_width="25dp"
         android:layout_height="wrap_content"
         android:layout_gravity="left|bottom"
         android:layout_marginRight="2dp"
         android:paddingBottom="5dp"
         android:src="@drawable/bg_request_message_tail" />

</LinearLayout>