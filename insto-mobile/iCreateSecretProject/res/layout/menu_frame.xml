<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_frame2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_menu">
   
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="150dp"
	    android:gravity="center_vertical|right"
	    android:orientation="horizontal" >

	    <ImageView	
	        android:id="@+id/profile_pic_view"
	        android:layout_width="122dp"
	        android:layout_height="120dp"
	        android:padding="10dp"
	        android:src="@drawable/head" />
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="right"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical|right"
	        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/user_profile_label"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:fontFamily="HelveticaNeue-CondensedBold.ttf"
	            android:text="User Name"

	            android:textSize="20sp"
	            android:textStyle="bold" />
	        <TextView
	            android:id="@+id/bal_label"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:fontFamily="HelveticaNeue-CondensedBold.ttf"
	            android:text="Balance:"
	            android:textSize="14sp" />
	        <TextView
	            android:id="@+id/user_profile_bal_label"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:fontFamily="HelveticaNeue-CondensedBold.ttf"
	            android:text="some money"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="16sp"
	            android:textStyle="bold" />
	
	    </LinearLayout>
	</LinearLayout>
    
    <FrameLayout android:id="@+id/menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

    
</LinearLayout>