<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    
    <style name="SliderAppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/SliderActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_actionbar_ic</item>
    </style>

    <style name="AppTheme1.ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/navbar</item>
        <item name="android:titleTextStyle">@style/AppTheme1.ActionBarTextStyle</item>
    </style>
    
    <style name="SliderActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppTheme1.ActionBarTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_actionbar_ic</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:background">@color/nus_orange</item>
        <item name="android:icon">@drawable/icon_camera_2</item>
    </style>

    <style name="AppTheme1.ActionBarTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"></style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>