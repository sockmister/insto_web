<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
	    <item name="android:icon">@drawable/camera_icon_2</item>
	    <item name="android:background">@color/nus_orange</item>
    	<item name="android:titleTextStyle">@style/AppTheme1.ActionBarTextStyle</item>
	</style>
	
   

  <style name="AppTheme1.ActionBarTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/color_wizard_white</item>
  </style>
</resources>